<div class="pagination">
    {% if pagination.prev %}
        <a href="{{pagination.prev.link}}" class="pagination pagination__previous {{pagination.prev.link|length ? '' : 'invisible'}}">Neuere Beiträge</a>
    {% endif %}
    {% if pagination.next %}
        <a href="{{pagination.next.link}}" class="pagination pagination__next {{pagination.next.link|length ? '' : 'invisible'}}">Ältere Beiträge</a>
    {% endif %}
    <span class="pagination__pages">
        {% for page in pagination.pages %}
            {% if page.link %}
                <a href="{{page.link}}" class="pagination__page {{page.class}}">{{page.title}}</a>
            {% else %}
                <span class="pagination__page {{page.class}}">{{page.title}}</span>
            {% endif %}
        {% endfor %}
    </span>
</div>